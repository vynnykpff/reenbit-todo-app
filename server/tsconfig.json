{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils": ["src/utils"],
      "@constants": ["src/common/constants"],
      "@types": ["src/common/types"],
      "@models": ["src/models"],
      "@middlewares": ["src/middlewares"],
      "@controllers": ["src/controllers"],
      "@routes": ["src/routes"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./*.js", "src/**/*.ts"],
  "exclude": ["./node_modules", "./dist"]
}
