{
  "compilerOptions": {
    "outDir": "dist",
    "target": "esnext",
    "module": "commonjs",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@utils": ["src/utils"],
      "@constants": ["src/constants"],
      "@types": ["src/types"],
      "@models": ["src/models"],
      "@middlewares": ["src/middlewares"],
      "@exceptions": ["src/exceptions"],
      "@controllers": ["src/controllers"],
      "@services": ["src/services"],
      "@routes": ["src/routes"],
      "@dtos": ["src/dtos"]
    },
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./*.js", "src/**/*.ts"],
  "exclude": ["./node_modules", "./dist"]
}
